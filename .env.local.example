# Ethnix - Local Development
# Copy to .env and adjust as needed

APP_ENV=local
APP_DEBUG=true

# Database (use values from docker-compose or local MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=ethnix
DB_USER=ethnix
DB_PASS=ethnix_local

# Session (empty domain for localhost)
SESSION_COOKIE_DOMAIN=
SESSION_SAMESITE=Lax
SESSION_NAME=ETHNIXSESSID

# Optional: Telegram (for production login - leave empty for dev_login)
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_BOT_USERNAME=EthnixRobot
# TELEGRAM_ANNOUNCE_CHAT_ID=
# TELEGRAM_REQUIRE_ALLOWLIST=false
